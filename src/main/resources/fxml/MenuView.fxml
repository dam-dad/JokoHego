<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <StackPane>
               <children>
                  <HBox alignment="CENTER" StackPane.alignment="CENTER">
                     <children>
                        <ImageView fx:id="puertauno" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ImagenesGreenStyle/Fondos/Nivel.png" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="puertados" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ImagenesGreenStyle/Fondos/Nivel.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <VBox fx:id="botonera" alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="600.0" spacing="5.0" StackPane.alignment="CENTER">
                     <children>
                        <Label text="JokoHego" />
                        <Button fx:id="jugarButton" mnemonicParsing="false" onAction="#onJugarAction" prefWidth="100.0" text="Jugar" />
                        <Button fx:id="ayudaButton" mnemonicParsing="false" onAction="#onAyudaAction" prefHeight="25.0" prefWidth="100.0" text="Ayuda" />
                        <Button fx:id="salirButton" mnemonicParsing="false" onAction="#onSalirAction" prefHeight="25.0" prefWidth="100.0" text="Salir" />
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
