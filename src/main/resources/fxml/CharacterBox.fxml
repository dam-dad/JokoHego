            <ImageView fitHeight="30.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ImagenesGreenStyle/Items/Espada.png" />
               </image>
            </ImageView>
            <Label fx:id="damageLabel" text="0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <ImageView fitHeight="30.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ImagenesGreenStyle/Items/Defensa.png" />
               </image>
            </ImageView>
            <Label fx:id="armorLabel" text="0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="200.0">
         <children>
            <Label text="Dinero:" />
            <Label fx:id="moneyLabel" text="0" />
         </children>
      </HBox>
      <Label text="Equipamiento" />
      <GridPane>
